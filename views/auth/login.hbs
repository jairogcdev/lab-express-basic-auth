<div>
  <h3>Formulario de autentificación</h3>

  <form action="/auth/login" method="post">
    <label for="username" required>Nombre de usuario</label>
    <input type="text" name="username" value="{{this.username}}" required />
    <br />
    <label for="password">Contraseña</label>
    <input type="password" name="password" value="{{this.password}}" required />
    <br />
    <button type="submit">Acceso</button>
    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
  </form>
</div>